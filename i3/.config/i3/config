# i3 config file

# this setups up which one is the "mod-key"
# (windows key is mod4, alt is mod1)
set $mod Mod4

# font used for window titles and such
font pango:CommitMono Nerd Font 11

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex-autostart --autostart --environment i3

# Use pactl to adjust volume in PulseAudio
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +3% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -3% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# switch window focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

#switch window focus (vim-keys)
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# move window (vim-keys)
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# focus the parent container
bindsym $mod+a focus parent

# floating mode toggle
bindsym $mod+Shift+f floating toggle

# floating modifier
floating_modifier $mod 

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # bindings for the arrow keys
        bindsym Left resize shrink width 20 px or 20 ppt
        bindsym Down resize grow height  20 px or 20 ppt
        bindsym Up resize shrink height  20 px or 20 ppt
        bindsym Right resize grow width  20 px or 20 ppt

        # bindings for the arrow keys (vim keys)
        bindsym h resize shrink width 20 px or 20 ppt
        bindsym j resize grow height  20 px or 20 ppt
        bindsym k resize shrink height  20 px or 20 ppt
        bindsym l resize grow width  20 px or 20 ppt

        # back to normal: press Escape
        bindsym Escape mode "default"
}

bindsym $mod+Shift+t mode "resize"

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# redshift nightlight modes
bindsym $mod+r mode "$mode_redshift"
set $mode_redshift Set colour temperature and brightness:
set $kill_redshift pkill -9 redshift;
mode "$mode_redshift" {
    bindsym x exec --no-startup-id "$kill_redshift redshift -x", mode "default"
    bindsym 1 exec --no-startup-id "$kill_redshift redshift -P -O 2500 -b 1.0", mode "default"
    bindsym q exec --no-startup-id "$kill_redshift redshift -P -O 2650 -b 1.0", mode "default"

 
    # exit mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# execute redshift on startup
exec --no-startup-id redshift -P -O 2500

# picom
exec --no-startup-id picom

# polybar (launch script makes it work on multiple monitors)
exec --no-startup-id ~/.config/polybar/launch_polybar.sh

# bg
exec --no-startup-id feh --bg-scale ~/.config/bg/gruvbox/snake2.png
# exec_always --no-startup-id feh --bg-scale ~/.config/bg/snow1.png

# gruvbox dark soft colors
set $dst2                      #252423
set $dst                       #252423
set $dark                      #32302F
set $medium1                   #3C3836
set $medium2                   #5B534D
set $medium_wood               #7C6F64
set $abdg                      #DDC7A1
set $almost_bright             #D4BE98
set $brightest                 #DDC7A1


# 272837 darkest
 
# 282938 dark
# 272837 dark
 
# ------------------------------
 
# 3C3E4F medium
# 4D4E5E medium
# 717181 medium_wood
 
# ------------------------------
 
# D6C1C1 almost_bright_darker_good
# DEC8C8 almost_bright
 
# E2CCCB brightest_alt
# E2CCCD brightest


# target                 title     bg         text      indicator  border
client.focused           $dst2     $abdg      $dst2     $dst2      $abdg
client.focused_inactive  $dst2     $abdg      $dst2     $dst2      $abdg
client.unfocused         $abdg     $dst2      $abdg     $abdg      $dst2
client.urgent            $dst2     $abdg      $dst2     $dst2      $abdg
client.placeholder       $dst2     $abdg      $dst2     $dst2      $abdg
client.background        $dst2

# keyboard layout switch setup
exec --no-startup-id "setxkbmap -layout us,fi -option 'grp:win_space_toggle'"

# Shortcut for Lockscreen
bindsym $mod+x exec --no-startup-id ~/dotfiles/i3lock/.config/i3lock/lock.sh
# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- ~/dotfiles/i3lock/.config/i3lock/lock.sh --nofork

# these take off i3 native borders, since we are using xborders for those
title_align center
default_border none
default_floating_border none
#hide_edge_borders both

# gaps are distracting
gaps inner 0px

# xborders
exec_always --no-startup-id ~/xborder/xborders --disable-version-warning --border-mode inside --positive-x-offset 0 --positive-y-offset 0 --negative-x-offset 0 --negative-y-offset 0 --border-rgba '#DDC7A1' --border-radius 0 --border-width 2

# dunst notifications daemon
exec --no-startup-id dunst &

# flameshot printscreen keybindings
bindsym $mod+Print exec --no-startup-id "flameshot full -c"
bindsym $mod+Shift+Print exec --no-startup-id "flameshot full"
bindsym $mod+Shift+S exec --no-startup-id "flameshot gui"

# bluetooth applet for systray
exec --no-startup-id blueman-applet

# brightness control
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +10%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 10%-

# rofi menu
bindsym $mod+d exec --no-startup-id "rofi -show drun"